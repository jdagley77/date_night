<img src="<%= restaurant.image_url %>" width="260" height="190"> <br>	
<a href="<%= restaurant.url %>"><%= restaurant.name %></a> <br>
<a href="tel:<%= restaurant.phone %>"><%= restaurant.phone %></a> <br>
<div class="ui label">
	Rating: <%= restaurant.rating %>
</div>
<div class="ui label">
	Price: <%= restaurant.price %>
</div> <br>
<% if !current_user %>
	<div class="ui lightgrey button">
		<%= button_to "Add to Top Restaurants", login_path %>
	</div>
<% else %>
	<% if current_user.restaurants.include?(restaurant) %>
		<%= link_to content_tag(:i, '', :class => "fa fa-times"), user_top_restaurants_path(current_user, :restaurant_id => restaurant.id), method: :destroy, class: "ui small yellow button" %>
	<% else %>
		<%= link_to content_tag(:i, '', :class => "fa fa-heart"), user_top_restaurants_path(current_user, :restaurant_id => restaurant.id), method: :post, class: "ui small yellow button" %>
	<% end %>
<% end %>


